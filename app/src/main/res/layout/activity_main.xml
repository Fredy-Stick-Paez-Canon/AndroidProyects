<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/background_activity"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T R I K I   F R U I T"
            android:textColor="#9980CC"
            android:textSize="32dp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="28dp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/reloj"
                    android:layout_width="96dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    app:srcCompat="@mipmap/relojarena" />

                <TextView
                    android:id="@+id/crono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#2585cc"
                    android:textSize="28sp"
                    android:textStyle="bold|italic"
                    tools:layout_editor_absoluteX="85dp"
                    tools:layout_editor_absoluteY="96dp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/button00"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />


                <ImageButton
                    android:id="@+id/button01"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />

                <ImageButton
                    android:id="@+id/button02"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/button10"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />

                <ImageButton
                    android:id="@+id/button11"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />

                <ImageButton
                    android:id="@+id/button12"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/button20"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />

                <ImageButton
                    android:id="@+id/button21"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />

                <ImageButton
                    android:id="@+id/button22"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imvFruta1"
                    android:layout_width="86dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/conta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="textStart"
                    android:textColor="#2585CC"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/conta2"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="#2585CC"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/imvFruta2"
                    android:layout_width="58dp"
                    android:layout_height="50dp" />

            </TableRow>

        </TableLayout>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/imbSalir"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="30dp"
                android:background="@drawable/stylebuttonnext"
                android:src="@android:drawable/ic_menu_revert"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/imbReiniciar"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="30dp"
                android:background="@drawable/stylebuttonnext"
                android:src="@android:drawable/ic_popup_sync"
                android:textAlignment="center" />
        </TableRow>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>