<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include layout="@layout/background_activity"></include>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T R I K I   F R U I T"
        android:textColor="#FFFFFF"
        android:textSize="32dp"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/reloj"
        android:layout_width="96dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/relojarena"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"/>

    <TextView
        android:id="@+id/crono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@id/reloj" />

        <TableLayout
            android:id="@+id/TableGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/button00"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />


                <ImageButton
                    android:id="@+id/button01"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />

                <ImageButton
                    android:id="@+id/button02"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/button10"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />

                <ImageButton
                    android:id="@+id/button11"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />

                <ImageButton
                    android:id="@+id/button12"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/button20"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />

                <ImageButton
                    android:id="@+id/button21"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />

                <ImageButton
                    android:id="@+id/button22"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/stylebuttonprin" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="24sp" />
            </TableRow>
        </TableLayout>

            <TableRow
                android:id="@+id/TbrMarker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_below="@+id/TableGame">

                <ImageView
                    android:id="@+id/imvFruta1"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/conta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="textStart"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/conta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="viewEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/imvFruta2"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"/>

            </TableRow>


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/TbrMarker">

            <ImageButton
                android:id="@+id/imbSalir"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="30dp"
                android:background="@drawable/stylebuttonnext"
                android:src="@android:drawable/ic_menu_revert"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/imbReiniciar"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="30dp"
                android:background="@drawable/stylebuttonnext"
                android:src="@android:drawable/ic_popup_sync"
                android:textAlignment="center" />
        </TableRow>



</RelativeLayout>